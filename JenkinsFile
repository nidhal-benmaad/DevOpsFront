pipeline {
    agent any
       /* parameters {
            string(name: 'SONAR_HOST_URL', defaultValue: 'http://localhost:9000', description: 'SonarQube server URL')
            string(name: 'SONAR_USERNAME', defaultValue: 'admin', description: 'SonarQube user login')
            string(name: 'SONAR_PASSWORD', defaultValue: 'Esprit', description: 'SonarQube user password')
        }*/

        credentials {
          usernamePassword(
            credentialsId: 'sonarqube-token',
            usernameVariable: 'admin',
            passwordVariable: 'Esprit',
            description: 'SonarQube access token'
          )
        }
    tools {
          nodejs 'nodeJs 19.8.1'
        }
    stages {
         stage ('GIT') {
            steps {
               echo "Getting Project from Git";
                    git branch: "ghadaBranch",
                        url: "https://github.com/nidhal-benmaad/DevOpsFront.git",
                        credentialsId:"gitHub";


                   }
                         }
          stage('Build') {
                      steps {
                          sh 'npm -version'
                          sh 'npm install'
                          // sh 'npm run build --prod'
                      }
                  }

       stage('SonarQube analysis') {
         steps {
           withCredentials([usernamePassword(credentialsId: 'sonarqube-token', usernameVariable: 'SONARQUBE_TOKEN', passwordVariable: 'SONARQUBE_PASSWORD')]) {
             withSonarQubeEnv('SonarFront') {
               sh 'npm install sonarqube-scanner'
               sh 'sonar-scanner'
             }
           }
         }
       }
    }
}
